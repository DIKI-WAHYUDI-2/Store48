<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_0240302_180944_0000"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="75dp"
            android:layout_height="26dp"
            android:text="Store48"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/_0240302_180829_0000" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:text="" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Silahkan Dipilih!"
        android:textSize="18dp"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbMieSagu"
            android:layout_width="165dp"
            android:layout_height="60dp"
            android:text="Mie Sagu"
            android:textColor="@color/black"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="88dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/miesagu" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etTotal"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvharga"
            android:layout_width="103dp"
            android:layout_height="41dp"
            android:text="Rp. 10.000"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbSusukedelai"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="Susu Kedelai"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="165dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="70dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/soya" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etTotal2"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tvharga2"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="Rp. 6.000"
        android:textSize="18dp"
        android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <RadioButton
        android:id="@+id/rbSempolet"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:text="Sempolet"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="165dp"
        android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="70dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/sempolet" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/etTotal3"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvharga3"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Rp. 10.000"
        android:textSize="18dp"
        android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <RadioButton
        android:id="@+id/rbBoluSagu"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:text="Bolu Sagu"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="165dp"
        android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="70dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/bolusagu" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/etTotal4"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvharga5"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Rp. 15.000"
        android:textSize="18dp"
        android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <RadioButton
        android:id="@+id/rbMembership"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Membership"
        android:textColor="@color/black"/>


        </RadioGroup>

</LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selesai" />

    <TextView
        android:id="@+id/tvhasil"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"/>




</LinearLayout>